        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:testOnly="true"
        android:theme="@style/Theme.Design.NoActionBar" >
        <activity
            android:name="com.project.hackathon.Potholeinformer.Signin"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.project.hackathon.Potholeinformer.Signup" />
        <activity android:name="com.project.hackathon.Potholeinformer.MainActivity" />
        <activity android:name="com.project.hackathon.Potholeinformer.AdminActivity" />
